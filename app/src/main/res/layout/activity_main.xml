<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.MainActivity">

    <View
        android:id="@+id/ActionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/primary"
        android:background="@drawable/sqr_border" />

    <ImageView
        android:id="@+id/UserProfile"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:src="@drawable/default_image"
        app:layout_constraintStart_toStartOf="@id/ActionBar"
        app:layout_constraintTop_toTopOf="@id/ActionBar"
        app:layout_constraintBottom_toBottomOf="@id/ActionBar"
        android:layout_margin="5dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/LoginIcon"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:src="@drawable/login_icon_24"
        app:layout_constraintStart_toStartOf="@id/ActionBar"
        app:layout_constraintTop_toTopOf="@id/ActionBar"
        app:layout_constraintBottom_toBottomOf="@id/ActionBar"
        android:layout_margin="5dp"
        android:visibility="gone"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@+id/ActionBar"
        app:layout_constraintBottom_toBottomOf="@+id/ActionBar"
        app:layout_constraintEnd_toEndOf="@+id/ActionBar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/facultyBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Know Your Faculty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ActionBar"
        android:background="@drawable/border"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/studentBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Students Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ViewProfile"
        android:background="@drawable/border"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:visibility="gone"/>


    <Button
        android:id="@+id/Login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActionBar"
        android:layout_margin="15dp"
        android:text="LogIn"
        android:background="@drawable/border"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/UpdateBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActionBar"
        android:layout_margin="15dp"
        android:text="Update Profile"
        android:background="@drawable/border"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:visibility="gone"/>


    <Button
        android:id="@+id/ViewProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateBtn"
        android:layout_margin="15dp"
        android:text="View Profile"
        android:background="@drawable/border"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:visibility="gone"/>


    <Button
        android:id="@+id/PlayVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentBtn"
        android:layout_margin="15dp"
        android:text="Placements Video"
        android:background="@drawable/border"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>